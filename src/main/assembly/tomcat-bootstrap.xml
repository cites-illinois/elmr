<?xml version="1.0" encoding="UTF-8" ?>
<assembly>
  <id>bootstrap</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
      <includes>
        <include>org.apache.tomcat:tomcat-catalina:*</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/security/SecurityClassLoad.class</include>
          <include>**/startup/Bootstrap.class</include>
          <include>**/startup/CatalinaProperties.class</include>
          <include>**/startup/ClassLoaderFactory$*.class</include>
          <include>**/startup/ClassLoaderFactory.class</include>
          <include>**/startup/SafeForkJoinWorkerThreadFactory$*.class</include>
          <include>**/startup/SafeForkJoinWorkerThreadFactory.class</include>
          <include>**/startup/Tool.class</include>
          <include>**/startup/catalina.properties</include>
          <include>**/webresources/Handler.class</include>
          <include>**/webresources/WarURLConnection.class</include>
          <include>**/buf/UriUtil.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>
