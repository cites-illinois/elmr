<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>750</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/config</directory>
      <outputDirectory>conf</outputDirectory>
      <fileMode>640</fileMode>
      <directoryMode>755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly</directory>
      <outputDirectory>logs</outputDirectory>
      <excludes>
        <exclude>*</exclude>
      </excludes>
      <fileMode>640</fileMode>
      <directoryMode>755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly</directory>
      <outputDirectory>temp</outputDirectory>
      <excludes>
        <exclude>*</exclude>
      </excludes>
      <fileMode>640</fileMode>
      <directoryMode>755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly</directory>
      <outputDirectory>work</outputDirectory>
      <excludes>
        <exclude>*</exclude>
      </excludes>
      <fileMode>640</fileMode>
      <directoryMode>755</directoryMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.build.finalName}-bootstrap.jar</source>
      <destName>bootstrap.jar</destName>
      <outputDirectory>${file.separator}bin</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>web/elmr/WEB-INF/lib</outputDirectory>
      <includes>
        <include>edu.illinois.techservices.elmr:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>web/elmr/WEB-INF/lib</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <exclude>commons-daemon:commons-daemon</exclude>
        <exclude>org.apache.tomcat:*</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>bin</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <exclude>edu.illinois.techservices.elmr:*</exclude>
        <exclude>org.apache.commons:*</exclude>
        <exclude>org.slf4j:*</exclude>
        <exclude>redis.clients:*</exclude>
      </excludes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <excludes>
        <exclude>edu.illinois.techservices.elmr:*</exclude>
      </excludes>
      <fileMode>640</fileMode>
      <directoryMode>750</directoryMode>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>commons-daemon:commons-daemon</exclude>
        <exclude>edu.illinois.techservices.elmr:*</exclude>
        <exclude>org.apache.tomcat:tomcat-juli</exclude>
        <exclude>org.apache.commons:*</exclude>
        <exclude>org.slf4j:*</exclude>
        <exclude>redis.clients:*</exclude>
      </excludes>
      <scope>runtime</scope>
      <fileMode>640</fileMode>
      <directoryMode>750</directoryMode>
    </dependencySet>
  </dependencySets>
</assembly>
